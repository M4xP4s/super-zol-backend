#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Get the commit message
commit_msg=$(cat "$1")

# Check if commit message follows conventional commits format
# Format: type(scope?): subject
# Types: feat, fix, docs, style, refactor, test, chore, ci, build, perf
if ! echo "$commit_msg" | grep -qE "^(feat|fix|docs|style|refactor|test|chore|ci|build|perf)(\(.+\))?: .{3,}"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit message must follow Conventional Commits format:"
  echo "  <type>(<scope>): <subject>"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, ci, build, perf"
  echo ""
  echo "Examples:"
  echo "  feat(api): add user authentication endpoint"
  echo "  fix(worker): resolve memory leak in job processor"
  echo "  docs: update README with setup instructions"
  echo "  refactor(shared): simplify utility functions"
  echo ""
  echo "Your message: $commit_msg"
  exit 1
fi
