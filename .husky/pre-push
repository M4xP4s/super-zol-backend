#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-push checks..."

# Type checking
echo "ğŸ“ Type checking..."
pnpm exec tsc --noEmit || {
  echo "âŒ Type check failed. Fix type errors before pushing."
  exit 1
}

# Run affected tests
echo "ğŸ§ª Running tests on affected projects..."
pnpm nx affected -t test --base=origin/main --parallel=3 || {
  echo "âŒ Tests failed. Fix failing tests before pushing."
  exit 1
}

# Build affected projects
echo "ğŸ—ï¸  Building affected projects..."
pnpm nx affected -t build --base=origin/main --parallel=3 || {
  echo "âŒ Build failed. Fix build errors before pushing."
  exit 1
}

echo "âœ… All pre-push checks passed!"
