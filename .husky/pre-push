#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-push checks..."

# Determine base branch for comparison
if git rev-parse --verify origin/main >/dev/null 2>&1; then
  BASE="origin/main"
elif git rev-parse --verify main >/dev/null 2>&1; then
  BASE="main"
else
  BASE="HEAD~1"
fi

echo "ğŸ“Š Comparing against: $BASE"

# Type checking
echo "ğŸ“ Type checking..."
pnpm exec tsc --noEmit || {
  echo "âŒ Type check failed. Fix type errors before pushing."
  exit 1
}

# Run affected tests
echo "ğŸ§ª Running tests on affected projects..."
pnpm nx affected -t test --base="$BASE" --parallel=3 || {
  echo "âŒ Tests failed. Fix failing tests before pushing."
  exit 1
}

# Build affected projects
echo "ğŸ—ï¸  Building affected projects..."
pnpm nx affected -t build --base="$BASE" --parallel=3 || {
  echo "âŒ Build failed. Fix build errors before pushing."
  exit 1
}

echo "âœ… All pre-push checks passed!"
